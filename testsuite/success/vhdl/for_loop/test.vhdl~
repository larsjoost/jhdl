entity test is
end entity test;

library std;
use std.env.finish;

architecture rtl of test is


begin

  process is
    variable x : integer;
  begin
    x := 1;
    for i in 0 to 10 loop
      x := 2 + 1;
    end loop;
    report "x = " & integer'image(x) severity note;
    finish(0);
  end process;

end architecture rtl;
