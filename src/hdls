#!/bin/bash

set -e

SCRIPTPATH=$(dirname ${BASH_SOURCE[0]})

usage()
{
    cat << EOF
Command: $0 $ALL_ARGUMENTS

usage: $0 options

OPTIONS:
   -h           Show this message
   -f <name>    Filename
   -d <name>    Do filename
   -o <name>    VCD output filename
   -v           Verbose 
EOF
}

while getopts ":hd:f:o:v" OPTION
do
    case $OPTION in
        h)
            usage
            exit 1
            ;;
        f)
            FILENAME="$OPTARG"
            ;;
        d)
            DO_FILENAME="-d $OPTARG"
            ;;
        o)
            VCD_FILENAME="$OPTARG"
            ;;
        v)
            VERBOSE="-v"
            ;;
        ?)
            echo "Unknown option $OPTARG"
            usage
            exit 1
            ;;
        :)
            echo "No argument value for option $OPTARG"
            usage
            exit 1
            ;;
    esac
done

if [ -z "$FILENAME" ]; then
    echo "Filename must be specified" 1>&2
    usage
    exit 1
fi

filebase="${FILENAME%.*}"
sourcefile="$filebase.hpp"
$SCRIPTPATH/hdlc -f $FILENAME > $sourcefile
targetdir=$(dirname $FILENAME)
templatefiles=$(ls $SCRIPTPATH/templates/*.cpp)
targets=""
for i in $templatefiles; do
    target=$targetdir/$(basename "$i")
    targets="$targets $target"
    if [ ! -e $target ]; then
        cp $i $target
        MODULE_NAME=$($SCRIPTPATH/hdlf -f $FILENAME)
        sed -i "s/%module%/${MODULE_NAME}/g" $target
        sed -i "s/%include%/$sourcefile/g" $target
    fi
done
g++ -std=c++14 -g -pthread -I$SCRIPTPATH/kernel/lib -o $filebase $sourcefile $targets
if [ -n "$VCD_FILENAME" ]; then
    if [ ! -e $VCD_FILENAME ]; then
        mkfifo $VCD_FILENAME
    fi
    # ./$filebase $DO_FILENAME -o $VCD_FILENAME & shmidcat $VCD_FILENAME | gtkwave -v -I output.sav
    ./$filebase $DO_FILENAME -o $VCD_FILENAME $VERBOSE 
else
    ./$filebase $DO_FILENAME $VERBOSE
fi
